{
  "name": "js13k2017",
  "version": "1.0.0",
  "repository": "https://github.com/onefrankguy/js13k2017",
  "license": "MIT",
  "scripts": {
    "watch": "npm-run-all --parallel watch:*",
    "prebuild": "rm -f game.zip && rm -rf public/* && npm run build:html && npm run build:css && npm run build:js && npm run build:gfx",
    "build": "cd public && advzip -a -4 ../game.zip $(cat ../manifest.txt)",
    "postbuild": "node test.js",
    "watch:html": "onchange *.html -- npm run build:html",
    "build:html": "mkdir -p public && cp *.html public/.",
    "watch:css": "onchange 'scss/*.scss' -- npm run build:css",
    "build:css": "npm run scss && npm run autoprefixer",
    "autoprefixer": "postcss --no-map -u autoprefixer -r public/css/*",
    "scss": "node-sass --output-style compressed --omit-source-map-url -o public/css scss",
    "watch:js": "onchange 'js/*.js' -- npm run build:js",
    "build:js": "mkdir -p public/js && uglifyjs js/*.js -m -c -o public/js/game.js",
    "postbuild:js": "npm run docs",
    "watch:gfx": "onchange 'img/*.png' -- npm run build:gfx",
    "build:gfx": "mkdir -p public/img && imagemin img/*.png --out-dir=public/img",
    "postbuild:gfx": "advpng -z -4 public/img/*.png",
    "publish": "cd public && rsync -avz --delete --files-from=../manifest.txt ./ frankmitchell.org:/home/public/js13k2017/",
    "lint": "eslint js/*.js test.js",
    "docs": "rm -rf docs/* && docco -l linear js/*.js"
  },
  "devDependencies": {
    "autoprefixer": "7.1.2",
    "docco": "0.7.0",
    "eslint": "4.4.1",
    "eslint-config-airbnb-base": "11.3.1",
    "eslint-plugin-import": "2.7.0",
    "imagemin-cli": "3.0.0",
    "node-sass": "4.5.3",
    "npm-run-all": "4.0.2",
    "onchange": "3.2.1",
    "postcss-cli": "4.1.0",
    "uglify-es": "3.0.28"
  }
}
