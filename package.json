{
  "name": "js13k2017",
  "version": "1.0.0",
  "repository": "https://github.com/onefrankguy/js13k2017",
  "license": "MIT",
  "scripts": {
    "watch:css": "onchange 'scss/*.scss' -- npm run build:css",
    "build:css": "npm run scss && npm run autoprefixer",
    "autoprefixer": "postcss -u autoprefixer -r public/css/*",
    "scss": "node-sass --output-style compressed -o public/css scss",
    "lint": "eslint js",
    "docs": "docco -l linear js/*.js"
  },
  "devDependencies": {
    "autoprefixer": "7.1.2",
    "docco": "0.7.0",
    "eslint": "4.4.1",
    "eslint-config-airbnb-base": "11.3.1",
    "eslint-plugin-import": "2.7.0",
    "node-sass": "4.5.3",
    "onchange": "3.2.1",
    "postcss-cli": "4.1.0"
  }
}
